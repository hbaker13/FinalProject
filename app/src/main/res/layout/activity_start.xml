<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.finalproject.StartActivity">

    <ImageView
        android:id="@+id/twentyyy"
        android:layout_width="132dp"
        android:layout_height="144dp"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/menu1"
        android:padding="@dimen/padding_regular"
        android:src="@drawable/twenty_circle" />

    <TextView
        android:id="@+id/twenyy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal"
        android:layout_toRightOf="@id/twentyyy"
        android:text="@string/menu1"/>

    <Switch
        android:id="@+id/switch20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal"
        android:layout_toRightOf="@id/twentyyy"
        android:layout_below="@id/twenyy"/>

    <ImageView
        android:id="@+id/drinkyyy"
        android:layout_width="130dp"
        android:layout_height="133dp"
        android:layout_below="@id/twentyyy"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/menu2"
        android:padding="@dimen/padding_regular"
        android:src="@drawable/drink_circle" />

    <TextView
        android:id="@+id/drinyyy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal"
        android:layout_below="@id/twentyyy"
        android:layout_toRightOf="@id/drinkyyy"
        android:text="@string/menu2"/>

    <Switch
        android:id="@+id/switchD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal"
        android:layout_toRightOf="@id/drinkyyy"
        android:layout_below="@id/drinyyy"/>

    <ImageView
        android:id="@+id/exercise"
        android:layout_width="127dp"
        android:layout_height="137dp"
        android:layout_below="@id/drinkyyy"
        android:layout_marginTop="-1dp"
        android:contentDescription="@string/menu3"
        android:padding="@dimen/padding_regular"
        android:src="@drawable/exer_circle" />

    <TextView
        android:id="@+id/exy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal"
        android:layout_below="@id/drinkyyy"
        android:layout_toRightOf="@id/exercise"
        android:text="@string/menu3"/>

    <Switch
        android:id="@+id/switchE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal"
        android:layout_toRightOf="@id/exercise"
        android:layout_below="@id/exy"/>
</RelativeLayout>