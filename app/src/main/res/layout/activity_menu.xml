<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.finalproject.MainActivity">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <RelativeLayout
            android:id="@+id/What"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleMenu"
                style="@style/MenuTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/menuImage"
                android:padding="@dimen/card_margin"
                android:text="@string/title_placeholder"
                android:theme="@style/ThemeOverlay.AppCompat.Dark" />


            <TextView
                android:id="@+id/subTitleMenu"
                style="@style/MenuDetailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleMenu"
                android:padding="@dimen/card_margin"
                android:text="@string/menu_info_placeholder" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/subTitleMenu">

            <TextView
                android:id="@+id/titleStart"
                style="@style/MenuTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/menuImage"
                android:padding="@dimen/card_margin"
                android:text="@string/title_placeholder"
                android:theme="@style/ThemeOverlay.AppCompat.Dark" />


            <TextView
                android:id="@+id/subTitleStart"
                style="@style/MenuDetailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleStart"
                android:padding="@dimen/card_margin"
                android:text="@string/menu_info_placeholder" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/FunFact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/subTitleStart">

            <TextView
                android:id="@+id/titleFunFact"
                style="@style/MenuTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/menuImage"
                android:padding="@dimen/card_margin"
                android:text="@string/title_placeholder"
                android:theme="@style/ThemeOverlay.AppCompat.Dark" />


            <TextView
                android:id="@+id/subTitle"
                style="@style/MenuDetailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleFunFact"
                android:padding="@dimen/card_margin"
                android:text="@string/menu_info_placeholder" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</ScrollView>