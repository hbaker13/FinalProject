<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/what"
        android:layout_width="132dp"
        android:layout_height="144dp"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/what_name"
        android:onClick="showWhat"
        android:padding="@dimen/padding_regular"
        android:src="@drawable/what_circle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showWhat"
        android:padding="@dimen/padding_wide"
        android:layout_toRightOf="@id/what"
        android:text="@string/what_name"/>

    <ImageView
        android:id="@+id/start"
        android:layout_width="130dp"
        android:layout_height="133dp"
        android:layout_below="@id/what"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/start_name"
        android:onClick="showStart"
        android:padding="@dimen/padding_regular"
        android:src="@drawable/start_circle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_wide"
        android:layout_below="@id/what"
        android:onClick="showStart"
        android:layout_toRightOf="@id/start"
        android:text="@string/start_name"/>

    <ImageView
        android:id="@+id/ff"
        android:layout_width="127dp"
        android:layout_height="137dp"
        android:layout_below="@id/start"
        android:layout_marginTop="-1dp"
        android:contentDescription="@string/ff_name"
        android:onClick="showFunFact"
        android:padding="@dimen/padding_regular"
        android:src="@drawable/funfact_circle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_wide"
        android:layout_below="@id/start"
        android:onClick="showFunFact"
        android:layout_toRightOf="@id/ff"
        android:text="@string/ff_name"/>
</RelativeLayout>