<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FunFact"
    >


        <ImageView
            android:id="@+id/funfactImage1"
            android:layout_width="132dp"
            android:layout_height="144dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/funfact_titles1"
            android:src="@drawable/eyeeye"
            android:padding="@dimen/padding_regular"
            android:onClick="showFF"/>

        <TextView
            android:id="@+id/subTitle1"
            android:onClick="showFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/funfactImage1"
            android:padding="40dp"
            android:text="@string/funfact_info_placeholder1" />

        <ImageView
            android:id="@+id/funfactImage2"
            android:layout_width="130dp"
            android:layout_height="133dp"
            android:layout_below="@id/funfactImage1"
            android:contentDescription="@string/funfact_titles2"
            android:src="@drawable/drink_circle"
            android:padding="@dimen/padding_regular"
            android:onClick="showFF1"/>

        <TextView
            android:id="@+id/subTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showFF1"
            android:layout_below="@id/subTitle1"
            android:layout_toRightOf="@id/funfactImage2"
            android:padding="50dp"
            android:text="@string/funfact_info_placeholder2" />

        <ImageView
            android:id="@+id/funfactImage3"
            android:layout_width="127dp"
            android:layout_height="137dp"
            android:layout_below="@id/funfactImage2"
            android:contentDescription="@string/funfact_titles3"
            android:padding="@dimen/padding_regular"
            android:src="@drawable/exer_image"
            android:onClick="showFF2"/>

        <TextView
            android:id="@+id/subTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showFF2"
            android:layout_below="@id/subTitle2"
            android:layout_toRightOf="@id/funfactImage3"
            android:padding="50dp"
            android:text="@string/funfact_info_placeholder3" />
</RelativeLayout>